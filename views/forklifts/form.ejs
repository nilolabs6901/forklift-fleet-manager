<div class="container-fluid">
  <nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/forklifts">Fleet Inventory</a></li>
      <% if (isEdit) { %>
        <li class="breadcrumb-item"><a href="/forklifts/<%= forklift.id %>"><%= forklift.id %></a></li>
        <li class="breadcrumb-item active">Edit</li>
      <% } else { %>
        <li class="breadcrumb-item active">Add New</li>
      <% } %>
    </ol>
  </nav>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">
            <i class="bi bi-<%= isEdit ? 'pencil' : 'plus-lg' %> me-2"></i>
            <%= isEdit ? 'Edit Forklift' : 'Add New Forklift' %>
          </h5>
        </div>
        <div class="card-body">
          <form id="forkliftForm">
            <div class="row g-3">
              <!-- Basic Info -->
              <div class="col-md-6">
                <label class="form-label">Forklift ID <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="id" value="<%= forklift ? forklift.id : '' %>"
                       <%= isEdit ? 'readonly' : 'required' %> placeholder="e.g., FK-001">
                <% if (!isEdit) { %>
                  <small class="text-muted">Unique identifier for this forklift</small>
                <% } %>
              </div>

              <div class="col-md-6">
                <label class="form-label">Location</label>
                <select class="form-select" name="location_id">
                  <option value="">Select Location</option>
                  <% locations.forEach(loc => { %>
                    <option value="<%= loc.id %>" <%= forklift && forklift.location_id == loc.id ? 'selected' : '' %>>
                      <%= loc.name %>
                    </option>
                  <% }) %>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Manufacturer</label>
                <input type="text" class="form-control" name="manufacturer"
                       value="<%= forklift ? forklift.manufacturer || '' : '' %>" placeholder="e.g., Toyota">
              </div>

              <div class="col-md-6">
                <label class="form-label">Model</label>
                <input type="text" class="form-control" name="model"
                       value="<%= forklift ? forklift.model || '' : '' %>" placeholder="e.g., 8FGU25">
              </div>

              <div class="col-md-6">
                <label class="form-label">Serial Number</label>
                <input type="text" class="form-control" name="serial_number"
                       value="<%= forklift ? forklift.serial_number || '' : '' %>">
              </div>

              <div class="col-md-6">
                <label class="form-label">Year</label>
                <input type="number" class="form-control" name="year" min="1990" max="2030"
                       value="<%= forklift ? forklift.year || '' : '' %>">
              </div>

              <div class="col-md-6">
                <label class="form-label">Fuel Type</label>
                <select class="form-select" name="fuel_type">
                  <option value="electric" <%= forklift && forklift.fuel_type === 'electric' ? 'selected' : '' %>>Electric</option>
                  <option value="propane" <%= forklift && forklift.fuel_type === 'propane' ? 'selected' : '' %>>Propane</option>
                  <option value="diesel" <%= forklift && forklift.fuel_type === 'diesel' ? 'selected' : '' %>>Diesel</option>
                  <option value="gas" <%= forklift && forklift.fuel_type === 'gas' ? 'selected' : '' %>>Gasoline</option>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Capacity (lbs)</label>
                <input type="number" class="form-control" name="capacity_lbs" min="0" step="100"
                       value="<%= forklift ? forklift.capacity_lbs || '' : '' %>" placeholder="e.g., 5000">
              </div>

              <div class="col-md-6">
                <label class="form-label">Status</label>
                <select class="form-select" name="status">
                  <option value="active" <%= forklift && forklift.status === 'active' ? 'selected' : '' %>>Active</option>
                  <option value="maintenance" <%= forklift && forklift.status === 'maintenance' ? 'selected' : '' %>>In Maintenance</option>
                  <option value="out_of_service" <%= forklift && forklift.status === 'out_of_service' ? 'selected' : '' %>>Out of Service</option>
                </select>
              </div>

              <div class="col-md-6">
                <label class="form-label">Operating Hours</label>
                <input type="number" class="form-control" name="operating_hours" min="0" step="0.1"
                       value="<%= forklift ? forklift.operating_hours || 0 : 0 %>">
              </div>

              <div class="col-md-6">
                <label class="form-label">Purchase Date</label>
                <input type="date" class="form-control" name="purchase_date"
                       value="<%= forklift && forklift.purchase_date ? forklift.purchase_date.split('T')[0] : '' %>">
              </div>

              <div class="col-md-6">
                <label class="form-label">Purchase Price</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" name="purchase_price" min="0" step="0.01"
                         value="<%= forklift ? forklift.purchase_price || '' : '' %>">
                </div>
              </div>

              <div class="col-md-6">
                <label class="form-label">Last Service Date</label>
                <input type="date" class="form-control" name="last_service_date"
                       value="<%= forklift && forklift.last_service_date ? forklift.last_service_date.split('T')[0] : '' %>">
              </div>

              <div class="col-md-6">
                <label class="form-label">Next Service Date</label>
                <input type="date" class="form-control" name="next_service_date"
                       value="<%= forklift && forklift.next_service_date ? forklift.next_service_date.split('T')[0] : '' %>">
              </div>

              <div class="col-12">
                <label class="form-label">Notes</label>
                <textarea class="form-control" name="notes" rows="3"><%= forklift ? forklift.notes || '' : '' %></textarea>
              </div>
            </div>

            <hr class="my-4">

            <div class="d-flex justify-content-between">
              <a href="<%= isEdit ? '/forklifts/' + forklift.id : '/forklifts' %>" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
              </a>
              <div>
                <% if (isEdit) { %>
                  <button type="button" class="btn btn-outline-danger me-2" id="deleteBtn">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                <% } %>
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-lg"></i> <%= isEdit ? 'Save Changes' : 'Add Forklift' %>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('forkliftForm');
  const isEdit = <%= isEdit ? 'true' : 'false' %>;
  const forkliftId = '<%= forklift ? forklift.id : '' %>';

  form.addEventListener('submit', async function(e) {
    e.preventDefault();
    const formData = new FormData(this);
    const data = Object.fromEntries(formData.entries());

    // Convert numeric fields
    if (data.year) data.year = parseInt(data.year);
    if (data.capacity_lbs) data.capacity_lbs = parseInt(data.capacity_lbs);
    if (data.operating_hours) data.operating_hours = parseFloat(data.operating_hours);
    if (data.purchase_price) data.purchase_price = parseFloat(data.purchase_price);
    if (data.location_id) data.location_id = parseInt(data.location_id);

    try {
      const url = isEdit ? `/api/forklifts/${forkliftId}` : '/api/forklifts';
      const method = isEdit ? 'PUT' : 'POST';

      const response = await fetch(url, {
        method,
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        showToast(isEdit ? 'Forklift updated successfully' : 'Forklift added successfully', 'success');
        setTimeout(() => {
          window.location.href = `/forklifts/${result.data.id}`;
        }, 1000);
      } else {
        showToast(result.error || 'Operation failed', 'danger');
      }
    } catch (error) {
      showToast('Error saving forklift', 'danger');
    }
  });

  <% if (isEdit) { %>
  document.getElementById('deleteBtn').addEventListener('click', async function() {
    if (!confirm('Are you sure you want to delete this forklift? This action cannot be undone.')) return;

    try {
      const response = await fetch(`/api/forklifts/${forkliftId}`, { method: 'DELETE' });
      const result = await response.json();

      if (result.success) {
        showToast('Forklift deleted successfully', 'success');
        setTimeout(() => {
          window.location.href = '/forklifts';
        }, 1000);
      } else {
        showToast(result.error || 'Failed to delete', 'danger');
      }
    } catch (error) {
      showToast('Error deleting forklift', 'danger');
    }
  });
  <% } %>
});
</script>
