  function formatType(type) {
    if (!type) return '';
    return type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
  }

  // Confidence calibration panel
  function updateConfidencePanel(predictions, summary) {
    const panel = document.getElementById('confidencePanel');
    if (predictions.length === 0) {
      panel.style.display = 'none';
      return;
    }
    panel.style.display = 'block';

    // Calculate average confidence across all predictions
    let totalConfidence = 0;
    let confidenceCount = 0;
    const typeConfidences = {};

    predictions.forEach(pred => {
      if (pred.predictions) {
        pred.predictions.forEach(p => {
          if (p.confidence) {
            totalConfidence += p.confidence;
            confidenceCount++;

            if (!typeConfidences[p.type]) {
              typeConfidences[p.type] = { total: 0, count: 0 };
            }
            typeConfidences[p.type].total += p.confidence;
            typeConfidences[p.type].count++;
          }
        });
      }
    });

    const avgConfidence = confidenceCount > 0 ? Math.round(totalConfidence / confidenceCount) : 0;
    const coverage = summary.totalUnits > 0 ? Math.round((summary.unitsWithPredictions / summary.totalUnits) * 100) : 0;

    // Data quality based on coverage and prediction count
    const dataQuality = Math.min(100, Math.round((coverage * 0.4) + (Math.min(confidenceCount / predictions.length, 3) * 20)));

    // Update UI
    document.getElementById('avgConfidence').textContent = avgConfidence + '%';
    document.getElementById('avgConfidenceFill').style.width = avgConfidence + '%';

    document.getElementById('dataQuality').textContent = dataQuality + '%';
    document.getElementById('dataQualityFill').style.width = dataQuality + '%';

    document.getElementById('predCoverage').textContent = coverage + '%';
    document.getElementById('predCoverageFill').style.width = coverage + '%';

    // Render confidence by type
    const typeIcons = {
      'scheduled_service': 'bi-calendar-check',
      'component_lifecycle': 'bi-gear',
      'failure_pattern': 'bi-exclamation-diamond'
    };

    let typeHtml = '';
    for (const [type, data] of Object.entries(typeConfidences)) {
      const avg = Math.round(data.total / data.count);
      typeHtml += `
        <div class="confidence-type-item">
          <div class="confidence-type-icon ${type}">
            <i class="bi ${typeIcons[type] || 'bi-question-circle'}"></i>
          </div>
          <div class="confidence-type-info">
            <div class="confidence-type-name">${formatType(type)}</div>
            <div class="confidence-type-score">${avg}% avg (${data.count} predictions)</div>
          </div>
          <div class="confidence-type-bar">
            <div class="confidence-type-fill" style="width: ${avg}%"></div>
          </div>
        </div>
      `;
    }
    document.getElementById('confidenceByType').innerHTML = typeHtml || '<p class="text-muted mb-0">No type-specific confidence data available</p>';
  }

  // Export to CSV
  function exportToCSV() {
    if (allPredictions.length === 0) {
      showToast('No predictions to export', 'warning');
      return;
    }

    const headers = ['Forklift ID', 'Model', 'Location', 'Status', 'Urgency Score', 'Top Prediction', 'Confidence', 'Days Until', 'Generated At'];
    const rows = allPredictions.map(pred => {
      const topPred = pred.predictions && pred.predictions[0] || {};
      return [
        pred.forkliftId,
        pred.model || '',
        pred.location || '',
        pred.overallStatus || 'ok',
        pred.urgencyScore || 0,
        topPred.title || 'No prediction',
        topPred.confidence ? topPred.confidence + '%' : '-',
        topPred.daysUntil !== undefined ? topPred.daysUntil : '-',
        pred.generatedAt || new Date().toISOString()
      ];
    });

    let csv = headers.join(',') + '\\n';
    rows.forEach(row => {
      csv += row.map(cell => {
        // Escape quotes and wrap in quotes if contains comma
        const str = String(cell).replace(/"/g, '""');
        return str.includes(',') ? '"' + str + '"' : str;
      }).join(',') + '\\n';
    });

    const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
    const link = document.createElement('a');
    link.href = URL.createObjectURL(blob);
    link.download = 'predictions_' + new Date().toISOString().split('T')[0] + '.csv';
    link.click();

    showToast('CSV exported successfully', 'success');
  }

