<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <p class="text-secondary mb-0">AI-powered maintenance predictions and component lifecycle analysis</p>
  </div>
  <div class="d-flex gap-2">
    <button class="btn btn-outline-primary" id="refreshPredictions">
      <i class="bi bi-arrow-clockwise"></i> Refresh
    </button>
    <div class="dropdown">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
        <i class="bi bi-download"></i> Export
      </button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><a class="dropdown-item" href="#" id="exportCSV"><i class="bi bi-filetype-csv me-2"></i>Export to CSV</a></li>
        <li><a class="dropdown-item" href="#" id="exportPDF"><i class="bi bi-file-pdf me-2"></i>Export to PDF</a></li>
      </ul>
    </div>
    <button class="btn btn-primary" id="shareReportBtn">
      <i class="bi bi-share"></i> Share
    </button>
    <a href="/api/v1/predictions" target="_blank" class="btn btn-outline-secondary">
      <i class="bi bi-code-slash"></i> JSON
    </a>
  </div>
</div>

<!-- Summary Stats -->
<div class="row g-4 mb-4">
  <div class="col-md-6 col-xl-3">
    <div class="stat-card danger fade-in">
      <div class="stat-card-body">
        <div class="stat-content">
          <h3 id="criticalCount">-</h3>
          <p>Critical</p>
        </div>
        <div class="stat-icon">
          <i class="bi bi-exclamation-octagon-fill"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-xl-3">
    <div class="stat-card warning fade-in">
      <div class="stat-card-body">
        <div class="stat-content">
          <h3 id="warningCount">-</h3>
          <p>Warning</p>
        </div>
        <div class="stat-icon">
          <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-xl-3">
    <div class="stat-card success fade-in">
      <div class="stat-card-body">
        <div class="stat-content">
          <h3 id="okCount">-</h3>
          <p>Healthy</p>
        </div>
        <div class="stat-icon">
          <i class="bi bi-check-circle-fill"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-xl-3">
    <div class="stat-card primary fade-in">
      <div class="stat-card-body">
        <div class="stat-content">
          <h3 id="analyzedCount">-</h3>
          <p>Units Analyzed</p>
        </div>
        <div class="stat-icon">
          <i class="bi bi-cpu-fill"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Confidence Calibration Panel -->
<div class="glass-card mb-4" id="confidencePanel" style="display: none;">
  <div class="card-header">
    <h5 class="mb-0">
      <i class="bi bi-speedometer2 text-primary me-2"></i>Model Confidence Calibration
    </h5>
    <button class="btn btn-sm btn-outline-secondary" id="toggleConfidencePanel">
      <i class="bi bi-chevron-up"></i>
    </button>
  </div>
  <div class="card-body" id="confidenceContent">
    <div class="row g-4">
      <div class="col-md-4">
        <div class="confidence-metric">
          <div class="confidence-label">Average Confidence</div>
          <div class="confidence-value" id="avgConfidence">-</div>
          <div class="confidence-bar">
            <div class="confidence-fill" id="avgConfidenceFill" style="width: 0%"></div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="confidence-metric">
          <div class="confidence-label">Data Quality Score</div>
          <div class="confidence-value" id="dataQuality">-</div>
          <div class="confidence-bar">
            <div class="confidence-fill quality" id="dataQualityFill" style="width: 0%"></div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="confidence-metric">
          <div class="confidence-label">Prediction Coverage</div>
          <div class="confidence-value" id="predCoverage">-</div>
          <div class="confidence-bar">
            <div class="confidence-fill coverage" id="predCoverageFill" style="width: 0%"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="row mt-4">
      <div class="col-12">
        <h6 class="text-muted mb-3">Confidence by Prediction Type</h6>
        <div class="confidence-types" id="confidenceByType">
          <!-- Filled by JS -->
        </div>
      </div>
    </div>
    <div class="confidence-legend mt-3 pt-3 border-top">
      <small class="text-muted">
        <i class="bi bi-info-circle me-1"></i>
        Confidence scores are calculated based on historical maintenance data, hour meter readings, and failure pattern matching.
        Higher scores indicate more reliable predictions. Scores below 60% may require additional data collection.
      </small>
    </div>
  </div>
</div>

<!-- Filters -->
<div class="filter-bar">
  <div class="row g-3 align-items-end">
    <div class="col-lg-2 col-md-4">
      <label class="form-label">Status</label>
      <select class="form-select" id="filterStatus">
        <option value="">All Statuses</option>
        <option value="critical">Critical</option>
        <option value="warning">Warning</option>
        <option value="ok">Healthy</option>
      </select>
    </div>
    <div class="col-lg-2 col-md-4">
      <label class="form-label">Prediction Type</label>
      <select class="form-select" id="filterType">
        <option value="">All Types</option>
        <option value="scheduled_service">Scheduled Service</option>
        <option value="component_lifecycle">Component Lifecycle</option>
        <option value="failure_pattern">Failure Pattern</option>
      </select>
    </div>
    <div class="col-lg-2 col-md-4">
      <label class="form-label">Location</label>
      <select class="form-select" id="filterLocation">
        <option value="">All Locations</option>
        <% locations.forEach(loc => { %>
          <option value="<%= loc.name %>"><%= loc.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="col-lg-3 col-md-6">
      <label class="form-label">Search Forklift</label>
      <input type="text" class="form-control" id="filterSearch" placeholder="FL-0001...">
    </div>
    <div class="col-lg-3 col-md-6">
      <div class="d-flex gap-2">
        <button type="button" class="btn btn-primary" id="applyFilters">
          <i class="bi bi-funnel"></i> Apply
        </button>
        <button type="button" class="btn btn-outline-secondary" id="clearFilters">
          <i class="bi bi-x-lg"></i> Clear
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Predictions List -->
<div class="glass-card">
  <div class="card-header">
    <div class="d-flex align-items-center gap-2">
      <span class="badge bg-primary rounded-pill" id="predictionCount">0</span>
      <span>predictions</span>
    </div>
    <div class="btn-group btn-group-sm">
      <button type="button" class="btn btn-outline-secondary active" data-view="cards">
        <i class="bi bi-grid-3x3-gap"></i>
      </button>
      <button type="button" class="btn btn-outline-secondary" data-view="table">
        <i class="bi bi-list"></i>
      </button>
    </div>
  </div>
  <div class="card-body" id="predictionsContent">
    <div class="text-center py-5">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading predictions...</span>
      </div>
      <p class="text-muted mt-3 mb-0">Analyzing fleet data...</p>
    </div>
  </div>
</div>

<!-- Share Modal -->
<div class="modal fade" id="shareModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><i class="bi bi-share me-2"></i>Share Predictions Report</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <div id="shareForm">
          <div class="mb-3">
            <label class="form-label">Report Title</label>
            <input type="text" class="form-control" id="shareTitle" value="Predictive Maintenance Report">
          </div>
          <div class="mb-3">
            <label class="form-label">Link Expires</label>
            <select class="form-select" id="shareExpiry">
              <option value="1h">1 hour</option>
              <option value="24h">24 hours</option>
              <option value="7d" selected>7 days</option>
              <option value="30d">30 days</option>
              <option value="">Never</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Maximum Views (optional)</label>
            <input type="number" class="form-control" id="shareMaxViews" placeholder="Unlimited" min="1">
          </div>
        </div>
        <div id="shareResult" style="display: none;">
          <div class="alert alert-success mb-3">
            <i class="bi bi-check-circle me-2"></i>Share link created successfully!
          </div>
          <div class="mb-3">
            <label class="form-label">Share URL</label>
            <div class="input-group">
              <input type="text" class="form-control" id="shareUrl" readonly>
              <button class="btn btn-outline-primary" type="button" id="copyShareUrl">
                <i class="bi bi-clipboard"></i>
              </button>
            </div>
          </div>
          <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary flex-fill" id="openShareUrl">
              <i class="bi bi-box-arrow-up-right me-1"></i>Open
            </button>
            <button class="btn btn-outline-secondary flex-fill" id="emailShareUrl">
              <i class="bi bi-envelope me-1"></i>Email
            </button>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="createShareLink">
          <i class="bi bi-link-45deg me-1"></i>Create Link
        </button>
      </div>
    </div>
  </div>
</div>

