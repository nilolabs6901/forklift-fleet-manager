<script>
document.addEventListener('DOMContentLoaded', function() {
  let allPredictions = [];
  let fleetSummary = {};
  let currentView = 'cards';

  // Load predictions
  loadPredictions();

  // Refresh button
  document.getElementById('refreshPredictions').addEventListener('click', loadPredictions);

  // View toggle
  document.querySelectorAll('[data-view]').forEach(btn => {
    btn.addEventListener('click', function() {
      document.querySelectorAll('[data-view]').forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      currentView = this.dataset.view;
      renderPredictions(filterPredictions());
    });
  });

  // Filter handlers
  document.getElementById('applyFilters').addEventListener('click', () => {
    renderPredictions(filterPredictions());
  });

  document.getElementById('clearFilters').addEventListener('click', () => {
    document.getElementById('filterStatus').value = '';
    document.getElementById('filterType').value = '';
    document.getElementById('filterLocation').value = '';
    document.getElementById('filterSearch').value = '';
    renderPredictions(allPredictions);
  });

  // Enter key on search
  document.getElementById('filterSearch').addEventListener('keyup', (e) => {
    if (e.key === 'Enter') renderPredictions(filterPredictions());
  });

  // Confidence panel toggle
  document.getElementById('toggleConfidencePanel').addEventListener('click', function() {
    const content = document.getElementById('confidenceContent');
    const icon = this.querySelector('i');
    if (content.style.display === 'none') {
      content.style.display = 'block';
      icon.className = 'bi bi-chevron-up';
    } else {
      content.style.display = 'none';
      icon.className = 'bi bi-chevron-down';
    }
  });

  // Export CSV
  document.getElementById('exportCSV').addEventListener('click', (e) => {
    e.preventDefault();
    exportToCSV();
  });

  // Export PDF
  document.getElementById('exportPDF').addEventListener('click', (e) => {
    e.preventDefault();
    exportToPDF();
  });

  // Share button
  document.getElementById('shareReportBtn').addEventListener('click', () => {
    document.getElementById('shareForm').style.display = 'block';
    document.getElementById('shareResult').style.display = 'none';
    document.getElementById('createShareLink').style.display = 'block';
    new bootstrap.Modal(document.getElementById('shareModal')).show();
  });

  // Create share link
  document.getElementById('createShareLink').addEventListener('click', async () => {
    const btn = document.getElementById('createShareLink');
    const originalText = btn.innerHTML;
    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Creating...';
    btn.disabled = true;

    try {
      const response = await fetch('/api/v1/share/predictions', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          title: document.getElementById('shareTitle').value,
          expiresIn: document.getElementById('shareExpiry').value || null,
          maxViews: document.getElementById('shareMaxViews').value ? parseInt(document.getElementById('shareMaxViews').value) : null
        })
      });

      const result = await response.json();

      if (result.success) {
        document.getElementById('shareForm').style.display = 'none';
        document.getElementById('shareResult').style.display = 'block';
        document.getElementById('shareUrl').value = result.data.fullUrl;
        document.getElementById('createShareLink').style.display = 'none';
        showToast('Share link created!', 'success');
      } else {
        showToast(result.error || 'Failed to create share link', 'danger');
      }
    } catch (error) {
      console.error('Share error:', error);
      showToast('Failed to create share link', 'danger');
    } finally {
      btn.innerHTML = originalText;
      btn.disabled = false;
    }
  });

  // Copy share URL
  document.getElementById('copyShareUrl').addEventListener('click', () => {
    const urlInput = document.getElementById('shareUrl');
    urlInput.select();
    document.execCommand('copy');
    showToast('URL copied to clipboard!', 'success');
  });

  // Open share URL
  document.getElementById('openShareUrl').addEventListener('click', () => {
    window.open(document.getElementById('shareUrl').value, '_blank');
  });

  // Email share URL
  document.getElementById('emailShareUrl').addEventListener('click', () => {
    const url = document.getElementById('shareUrl').value;
    const title = document.getElementById('shareTitle').value;
    const subject = encodeURIComponent(title);
    const body = encodeURIComponent(`Check out this fleet predictions report:\n\n${url}`);
    window.location.href = `mailto:?subject=${subject}&body=${body}`;
  });

  async function loadPredictions() {
    const content = document.getElementById('predictionsContent');
    content.innerHTML = `
      <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
        <p class="text-muted mt-3 mb-0">Analyzing fleet data...</p>
      </div>
    `;

    try {
      const response = await fetch('/api/v1/predictions');
      const result = await response.json();

      if (!result.success) {
        throw new Error(result.error || 'Failed to load predictions');
      }

      allPredictions = result.data.predictions || [];
      fleetSummary = result.data.summary || {};

      // Update stats
      document.getElementById('criticalCount').textContent = fleetSummary.criticalCount || 0;
      document.getElementById('warningCount').textContent = fleetSummary.warningCount || 0;
      document.getElementById('okCount').textContent = fleetSummary.okCount || 0;
      document.getElementById('analyzedCount').textContent =
        `${fleetSummary.unitsWithPredictions || 0}/${fleetSummary.totalUnits || 0}`;

      // Update confidence calibration panel
      updateConfidencePanel(allPredictions, fleetSummary);

      renderPredictions(allPredictions);

    } catch (error) {
      console.error('Failed to load predictions:', error);
      content.innerHTML = `
        <div class="empty-state-predictions">
          <i class="bi bi-exclamation-triangle text-warning"></i>
          <h5>Unable to Load Predictions</h5>
          <p class="text-muted">Please try refreshing the page.</p>
          <button class="btn btn-primary" onclick="location.reload()">
            <i class="bi bi-arrow-clockwise me-1"></i>Refresh
          </button>
        </div>
      `;
    }
  }

  function filterPredictions() {
    const status = document.getElementById('filterStatus').value;
    const type = document.getElementById('filterType').value;
    const location = document.getElementById('filterLocation').value;
    const search = document.getElementById('filterSearch').value.toLowerCase();

    return allPredictions.filter(pred => {
      if (status && pred.overallStatus !== status) return false;
      if (location && pred.location !== location) return false;
      if (search && !pred.forkliftId.toLowerCase().includes(search)) return false;
      if (type) {
        const hasType = pred.predictions && pred.predictions.some(p => p.type === type);
        if (!hasType) return false;
      }
      return true;
    });
  }

  function renderPredictions(predictions) {
    const content = document.getElementById('predictionsContent');
    document.getElementById('predictionCount').textContent = predictions.length;

    if (predictions.length === 0) {
      content.innerHTML = `
        <div class="empty-state-predictions">
          <i class="bi bi-check-circle"></i>
          <h5>All Systems Normal</h5>
          <p class="text-muted">No predictions match your current filters.</p>
        </div>
      `;
      return;
    }

    // Sort by urgency score descending
    predictions.sort((a, b) => (b.urgencyScore || 0) - (a.urgencyScore || 0));

    if (currentView === 'cards') {
      renderCardsView(predictions);
    } else {
      renderTableView(predictions);
    }
  }

