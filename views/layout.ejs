<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | Fleet Manager</title>

  <!-- Google Fonts - Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Custom Styles -->
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/chat-widget.css" rel="stylesheet">
</head>
<body>
  <!-- Animated Background -->
  <div class="bg-gradient-animated"></div>

  <div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
      <div class="sidebar-header">
        <div class="logo-container">
          <div class="logo-icon">
            <i class="bi bi-truck"></i>
          </div>
          <div class="logo-text">
            <span class="logo-title">Fleet Manager</span>
            <span class="logo-subtitle">Control Center</span>
          </div>
        </div>
      </div>

      <ul class="sidebar-nav">
        <li class="nav-section-title">Main Menu</li>
        <li class="<%= currentPath === '/' ? 'active' : '' %>">
          <a href="/">
            <span class="nav-icon"><i class="bi bi-grid-1x2-fill"></i></span>
            <span class="nav-text">Dashboard</span>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/forklifts') ? 'active' : '' %>">
          <a href="/forklifts">
            <span class="nav-icon"><i class="bi bi-boxes"></i></span>
            <span class="nav-text">Fleet Inventory</span>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/maintenance') ? 'active' : '' %>">
          <a href="/maintenance">
            <span class="nav-icon"><i class="bi bi-tools"></i></span>
            <span class="nav-text">Maintenance</span>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/invoice-workflow') ? 'active' : '' %>">
          <a href="/invoice-workflow">
            <span class="nav-icon"><i class="bi bi-envelope-open"></i></span>
            <span class="nav-text">Invoice Workflow</span>
            <span class="nav-badge bg-success">Demo</span>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/alerts') ? 'active' : '' %>">
          <a href="/alerts">
            <span class="nav-icon"><i class="bi bi-bell-fill"></i></span>
            <span class="nav-text">Alerts</span>
            <% if (typeof activeAlertCount !== 'undefined' && activeAlertCount > 0) { %>
              <span class="nav-badge"><%= activeAlertCount %></span>
            <% } %>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/locations') ? 'active' : '' %>">
          <a href="/locations">
            <span class="nav-icon"><i class="bi bi-geo-alt-fill"></i></span>
            <span class="nav-text">Locations</span>
          </a>
        </li>

        <li class="nav-section-title">Analytics</li>
        <li class="<%= currentPath.startsWith('/predictions') ? 'active' : '' %>">
          <a href="/predictions">
            <span class="nav-icon"><i class="bi bi-cpu-fill"></i></span>
            <span class="nav-text">Predictions</span>
          </a>
        </li>
        <li class="<%= currentPath === '/reports' ? 'active' : '' %>">
          <a href="/reports">
            <span class="nav-icon"><i class="bi bi-graph-up-arrow"></i></span>
            <span class="nav-text">Reports</span>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/risk-analysis') ? 'active' : '' %>">
          <a href="/risk-analysis">
            <span class="nav-icon"><i class="bi bi-shield-exclamation"></i></span>
            <span class="nav-text">Risk Analysis</span>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/downtime') ? 'active' : '' %>">
          <a href="/downtime">
            <span class="nav-icon"><i class="bi bi-clock-history"></i></span>
            <span class="nav-text">Downtime</span>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/budget') ? 'active' : '' %>">
          <a href="/budget">
            <span class="nav-icon"><i class="bi bi-calculator"></i></span>
            <span class="nav-text">Budget</span>
          </a>
        </li>

        <li class="nav-section-title">Admin</li>
        <li class="<%= currentPath.startsWith('/hour-meter-review') ? 'active' : '' %>">
          <a href="/hour-meter-review">
            <span class="nav-icon"><i class="bi bi-speedometer2"></i></span>
            <span class="nav-text">Hour Meter Review</span>
          </a>
        </li>
        <li class="<%= currentPath.startsWith('/settings') ? 'active' : '' %>">
          <a href="/settings">
            <span class="nav-icon"><i class="bi bi-gear-fill"></i></span>
            <span class="nav-text">Settings</span>
          </a>
        </li>
      </ul>

      <div class="sidebar-footer">
        <div class="user-info">
          <div class="user-avatar">
            <i class="bi bi-person-fill"></i>
          </div>
          <div class="user-details">
            <span class="user-name">Admin User</span>
            <span class="user-role">Fleet Manager</span>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <div id="content">
      <!-- Top Navbar -->
      <nav class="top-navbar">
        <div class="navbar-left">
          <button type="button" id="sidebarToggle" class="sidebar-toggle">
            <i class="bi bi-list"></i>
          </button>
          <div class="page-title-container">
            <h1 class="page-title"><%= title %></h1>
          </div>
        </div>

        <div class="navbar-right">
          <!-- Search Bar -->
          <div class="search-container">
            <i class="bi bi-search search-icon"></i>
            <input type="text" class="search-input" placeholder="Search fleet...">
          </div>

          <!-- Notifications -->
          <div class="dropdown">
            <button class="navbar-icon-btn" type="button" id="alertsDropdown" data-bs-toggle="dropdown">
              <i class="bi bi-bell"></i>
              <span class="notification-dot" id="alertBadge" style="display: none;"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end glass-dropdown" aria-labelledby="alertsDropdown" id="alertsDropdownMenu">
              <li class="dropdown-header">
                <span>Notifications</span>
                <a href="/alerts" class="view-all">View All</a>
              </li>
              <li><hr class="dropdown-divider"></li>
              <li class="dropdown-item-empty">No new notifications</li>
            </ul>
          </div>

          <!-- Settings -->
          <button class="navbar-icon-btn">
            <i class="bi bi-gear"></i>
          </button>
        </div>
      </nav>

      <!-- Page Content -->
      <main class="main-content">
        <div class="content-wrapper">
          <%- body %>
        </div>
      </main>
    </div>
  </div>

  <!-- Toast Container -->
  <div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastContainer"></div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
  <script src="/js/app.js"></script>
  <script src="/js/chat-widget.js"></script>
</body>
</html>
